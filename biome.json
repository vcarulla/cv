{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useTemplate": "off"
      },
      "suspicious": {
        "noControlCharactersInRegex": "off",
        "noTemplateCurlyInString": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "files": {
    "includes": ["**/*.js", "**/*.json"]
  }
}
